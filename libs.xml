<?xml version="1.0" encoding="UTF-8"?>
<libraries checkVersion = "update || all">
	<if cond="update || all">
		<print pretty="true">Preparing installation...</print>

		<!-- OpenFL & Lime (Required for Flixel) -->
		<git name="openfl" url="https://github.com/system32unknown/openfl"/>
		<lib name="lime" unless="macos"/>
		<lib name="lime" version="8.1.3" if="macos"/>

		<!-- Flixel -->
		<git name="flixel" url="https://github.com/system32unknown/flixel-alter" skipDeps="true"/>
		<git name="flixel-addons" url="https://github.com/system32unknown/flixel-addons" skipDeps="true"/>

		<!-- Other Libraries -->
		<git name="hscript-improved" url="https://github.com/system32unknown/AlterHscript" ref="custom-classes"/>
		<git name="flxanimate" url="https://github.com/Dot-Stuff/flxanimate" ref="dev"/>
		<git name="hxdiscord_rpc" url="https://github.com/MAJigsaw77/hxdiscord_rpc" skipDeps="true"/>
		<lib name="hxvlc" url="https://github.com/MAJigsaw77/hxvlc" skipDeps="true"/>
		<lib name="tjson"/>
		<lib name="parallaxlt"/>
		<git name="json2object" url="https://github.com/FunkinCrew/json2object"/>

		<!-- Audio Visualizers -->
		<git name="funkin.vis" url="https://github.com/FunkinCrew/funkVis"/>
		<git name="grig.audio" url="https://github.com/FunkinCrew/grig.audio" ref="refactor/fft-cam-version"/>

		<!-- THX Libraries -->
		<git name="thx.core" url="https://github.com/fponticelli/thx.core"/>
		<git name="thx.semver" url="https://github.com/fponticelli/thx.semver"/>

		<!-- For building lime -->
		<lib global="true" name="hxp" /> <lib name="hxp"/>
		<lib global="true" name="format" /> <lib name="format"/>

		<git name="hxcpp" url="https://github.com/system32unknown/hxcpp"/>
	</if>

	<!-- Hxcpp Building -->
	<if cond="build-hxcpp || all">
		<print pretty="true">Rebuilding Hxcpp...</print>

		<!-- Build hxcpp -->
		<cmd inLib="hxcpp" dir="tools/run" cmd="haxe compile.hxml" />
		<cmd inLib="hxcpp" dir="tools/hxcpp" cmd="haxe compile.hxml" />
	</if>
</libraries>